<div class="container mx-auto px-4 py-8">
  <!-- 投稿詳細カード -->
  <div class="card bg-white shadow-lg rounded-lg p-6">
    <!-- ユーザーアイコン・ユーザー名 -->
    <div class="flex items-center mb-4">
      <div class="w-12 h-12 rounded-full bg-gray-300 flex items-center justify-center text-xl font-bold">
        <%= @review.user.name[0].upcase %>
      </div>
      <div class="ml-4 text-gray-800 font-medium">
        <p class="text-sm"><%= @review.user.name %></p>
      </div>
    </div>

    <!-- 投稿写真 -->
    <div class="mb-6 grid grid-cols-3 sm:grid-cols-5 gap-3">
      <% 5.times do |i| %>
        <img src="https://via.placeholder.com/200" alt="投稿写真" class="aspect-square rounded-md object-cover">
      <% end %>
    </div>

    <!-- 投稿タイトル -->
    <h1 class="text-2xl font-bold mb-6"><%= @review.title %></h1>

    <!-- 投稿本文 -->
    <div class="mb-6 text-gray-700 text-sm">
      <%= simple_format(@review.content) %>
    </div>

    <!--手放せるものがある時に、編集フォームを表示-->
    <% if @review.releasable_items.present? %>
      <!-- 手放せるもの -->
      <div class="mb-6 p-4 bg-gray-100 rounded-lg">
        <h2 class="text-lg font-bold mb-2 text-gray-800">手放せるもの</h2>
        <ul class="space-y-2">
          <% @review.releasable_items.each do |item| %>
            <li class="flex items-center text-gray-700">
              <span class="material-symbols-outlined text-blue-500 mr-2">check_circle</span>
              <%= item.name %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <!-- 編集ボタン -->

    <% if current_user == @review.user %>
      <div class="flex justify-end gap-4 mt-4">
        <%= link_to edit_review_path(@review), class: "flex items-center gap-1 hover:text-blue-600" do %>
          <span class="material-symbols-outlined">edit_document</span>
        <% end %>

    <!-- 削除ボタン -->
        <%= link_to review_path(@review), 
            method: :delete,
            data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "flex items-center gap-1 hover:text-red-600" do %>
          <span class="material-symbols-outlined">delete</span>
        <% end %>
      </div>
    <% end %>


    <!-- 区切り線 -->
    <hr class="my-6 border-gray-300">

    <!-- いいねボタン -->
    <div class="flex justify-end mb-6">
      <button class="flex items-center text-red-500 hover:text-red-600">
        <span class="material-icons text-2xl">favorite_border</span>
      </button>
    </div>

    <!-- 商品情報 -->
    <div class="flex items-center">
      <img src="https://via.placeholder.com/100" alt="商品画像" class="w-16 h-16 object-cover rounded-md">
      <div class="ml-4">
        <p class="text-gray-800 text-sm font-medium">ブランド: MockBrand</p>
        <p class="text-gray-800 text-sm font-medium">商品名: MockItem</p>
      </div>
    </div>
  </div>

  <!-- コメント機能予定スペース -->
  <div class="mt-8">
    <h2 class="text-xl font-bold mb-4">コメント</h2>
    <p class="text-gray-500">※ コメント機能は後で実装予定です。</p>
  </div>
</div>
